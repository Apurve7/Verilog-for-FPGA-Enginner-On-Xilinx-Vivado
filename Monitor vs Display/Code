module tb;

 

// Declare a 4-bit register 'a' with an initial value of 0

reg [3:0] a = 4'h0;

 

 

initial begin

  a = 4'b1001; 

  #10; 

  a = 4'b0001; 

  $display("Value of a_d : %0d @ %0t",a, $time); 

  #10; 

  a = 4'b1010; 

  $display("Value of a_d : %0d @ %0t",a, $time); 

  #10; 

  a = 4'b1010; 

  $display("Value of a_d : %0d @ %0t",a, $time); 

end

 



initial begin

  $monitor("Value of a_m :%0d @ %0t", a, $time); 

end

 

endmodule
